set scrolloff=5

set incsearch
set ignorecase
set visualbell
set noerrorbells
set easymotion

let mapleader=" "

map <leader>r <Action>(ReformatCode)
map <leader>c <Action>($Copy)
map <leader>v <Action>($Paste)
map <leader>a <Action>($SelectAll)
map <leader>x <Action>($Cut)
map <leader>e <Action>(ShowErrorDescription)
map <leader>; <Plug>(easymotion-s)

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
